{
  "name": "vchat-starter-kit",
  "version": "1.0.0",
  "description": "vchat is a chat ui automation testing framework.",
  "main": "main.js",
  "scripts": {
    "test": "esbuild test/test.js --bundle --platform=node --target=node18 --format=cjs --outfile=dist/main.js",
    "build": "esbuild main.js --bundle --platform=node --target=node18 --format=cjs --outfile=dist/main.js",
    "release": "npm run build && terser dist/main.js -o dist/main.js --compress --mangle"
  },
  "keywords": [
    "vchat",
    "hamibot",
    "autojs",
    "robot",
    "wxrpa"
  ],
  "author": "tmkook",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "esbuild": "^0.19.8",
    "terser": "^5.26.0"
  },
  "dependencies": {
    "vchat": "github:tmkook/vchat"
  }
}
